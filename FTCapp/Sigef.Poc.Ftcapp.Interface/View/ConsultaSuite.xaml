                    </ScrollViewer>
                </StackPanel>

            </Expander>
            <!--  ELEMENTO/COMANDO  -->
            <Expander
                Margin="4,0"
                ExpandDirection="Left"
                IsExpanded="True">
                <Expander.Header>
                    <TextBlock Style="{DynamicResource TextBlockGridTitleDireitoStyle}" Text="ACOES EXECUTADAS">
                        <TextBlock.LayoutTransform>
                            <RotateTransform Angle="270" />
                        </TextBlock.LayoutTransform>
                    </TextBlock>
                </Expander.Header>
                <StackPanel>
                    <ScrollViewer>
